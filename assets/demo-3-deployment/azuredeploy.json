{
    /*
    What we will be doing in this template.
        1. Create linked template
        2. Set correct dependencies between templates
    */
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "gitHub": {
            "defaultValue": {
                "baseUri": "https://raw.githubusercontent.com/EldertGrootenboer/The-Ultimate-Guide-To-Building-Better-Azure-ARM-Templates/master/assets/demo-3-deployment/"
            },
            "type": "object"
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "cosmosDB",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, '3a-cosmos-db.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "storageAccount",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, '3d-storage-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "cosmosDbConnection",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'cosmosDB')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, '3b-cosmos-db-connection.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "logicApp",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'cosmosDbConnection')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('gitHub').baseUri, '3c-logic-app.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        }
    ]
}
