{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "st"
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "LastModifiedDate": "[format('{0}', utcNow())]",
        "Project": "The Ultimate Guide To Building Better Azure ARM Templates",
        "Purpose": "Session"
      }
    },
    "globalRedundancy": {
      "type": "bool",
      "defaultValue": false
    }
  },
  "functions": [],
  "variables": {
    "storageAccountName": "[format('{0}{1}', parameters('namePrefix'), uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-06-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "kind": "Storage",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "[if(parameters('globalRedundancy'), 'Standard_GRS', 'Standard_LRS')]"
      }
    }
  ],
  "outputs": {}
}